/* 习惯详情页面样式 */

.habit-detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 20rpx;
}

/* 习惯基本信息 */
.habit-info-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.habit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.habit-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
}

.habit-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.habit-status.active {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
}

.habit-status.paused {
  background: rgba(245, 158, 11, 0.2);
  color: #f59e0b;
}

.habit-description {
  font-size: 26rpx;
  color: #a0a0a0;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.habit-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 20rpx;
}

.meta-text {
  font-size: 22rpx;
  color: #a0a0a0;
}

/* 区块标题 */
.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

/* 统计信息 */
.stats-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
  padding: 25rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3b82f6;
}

.stat-label {
  font-size: 22rpx;
  color: #a0a0a0;
}

.stat-unit {
  font-size: 20rpx;
  color: #6b7280;
}

/* 打卡区域 */
.checkin-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.checkin-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
}

.checkin-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.checkin-date {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.checkin-status {
  font-size: 20rpx;
}

.checkin-status.checked {
  color: #22c55e;
}

.checkin-status.unchecked {
  color: #f59e0b;
}

.checked-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(34, 197, 94, 0.2);
  border-radius: 20rpx;
}

.checked-icon {
  font-size: 20rpx;
}

.checked-text {
  font-size: 20rpx;
  color: #22c55e;
  font-weight: 500;
}

/* 记录列表 */
.records-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
}

.record-date {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  min-width: 120rpx;
}

.date-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
}

.time-text {
  font-size: 18rpx;
  color: #a0a0a0;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.record-count {
  font-size: 24rpx;
  color: #ffffff;
}

.record-notes {
  font-size: 20rpx;
  color: #a0a0a0;
  line-height: 1.4;
}

.record-icon {
  font-size: 24rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-buttons rpg-button {
  flex: 1;
}

/* 删除确认模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.delete-modal {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 25rpx;
  width: 100%;
  max-width: 500rpx;
  overflow: hidden;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  background: rgba(239, 68, 68, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ef4444;
  text-align: center;
}

.modal-content {
  padding: 30rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.modal-warning {
  font-size: 22rpx;
  color: #ef4444;
  line-height: 1.4;
}

.modal-actions {
  display: flex;
  gap: 15rpx;
  padding: 20rpx 30rpx 30rpx;
}

.modal-actions rpg-button {
  flex: 1;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #a0a0a0;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .checkin-card {
    flex-direction: column;
    gap: 15rpx;
    align-items: stretch;
  }
}
