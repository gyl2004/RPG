/* 任务详情页面样式 */

.task-detail-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 20rpx;
}

/* 任务头部 */
.task-header {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.task-title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
  margin-right: 20rpx;
}

.task-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.task-status.pending {
  background: rgba(107, 114, 128, 0.2);
  color: #9ca3af;
}

.task-status.in_progress {
  background: rgba(59, 130, 246, 0.2);
  color: #60a5fa;
}

.task-status.completed {
  background: rgba(34, 197, 94, 0.2);
  color: #4ade80;
}

.task-status.failed {
  background: rgba(239, 68, 68, 0.2);
  color: #f87171;
}

.task-status.cancelled {
  background: rgba(107, 114, 128, 0.2);
  color: #9ca3af;
}

.status-icon {
  font-size: 20rpx;
}

.status-text {
  font-size: 20rpx;
}

.task-description {
  font-size: 26rpx;
  color: #a0a0a0;
  line-height: 1.5;
}

/* 任务信息卡片 */
.task-info-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.info-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 25rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
  padding: 20rpx;
}

.info-item.full-width {
  flex: none;
  width: 100%;
}

.info-icon {
  font-size: 32rpx;
  min-width: 40rpx;
  text-align: center;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
  flex: 1;
}

.info-label {
  font-size: 20rpx;
  color: #a0a0a0;
}

.info-value {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 进度区域 */
.progress-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #3b82f6;
  font-weight: bold;
  min-width: 60rpx;
  text-align: right;
}

.progress-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-slider {
  flex: 1;
}

/* 奖励区域 */
.rewards-section {
  background: rgba(251, 191, 36, 0.1);
  border: 2rpx solid rgba(251, 191, 36, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.rewards-grid {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 20rpx;
}

.reward-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  min-width: 120rpx;
}

.reward-icon {
  font-size: 40rpx;
}

.reward-text {
  font-size: 22rpx;
  color: #fbbf24;
  font-weight: 500;
  text-align: center;
}

/* 时间轴区域 */
.timeline-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.timeline-container {
  position: relative;
}

.timeline-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  z-index: 2;
  position: relative;
}

.timeline-dot.photo {
  background: #3b82f6;
}

.timeline-dot.note {
  background: #8b5cf6;
}

.timeline-dot.progress {
  background: #22c55e;
}

.timeline-connector {
  width: 4rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin-top: 10rpx;
}

.timeline-content {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
  padding: 20rpx;
  position: relative;
}

.timeline-content::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-right: 10rpx solid rgba(255, 255, 255, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
  gap: 10rpx;
}

.record-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
}

.record-time {
  font-size: 20rpx;
  color: #a0a0a0;
}

.record-progress {
  font-size: 20rpx;
  color: #3b82f6;
  font-weight: bold;
  background: rgba(59, 130, 246, 0.2);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.timeline-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.progress-milestone {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx;
  background: rgba(34, 197, 94, 0.1);
  border-radius: 10rpx;
  border: 1rpx solid rgba(34, 197, 94, 0.3);
}

.milestone-icon {
  font-size: 24rpx;
}

.milestone-text {
  font-size: 24rpx;
  color: #22c55e;
  font-weight: 500;
}

.record-actions {
  margin-top: 15rpx;
  text-align: right;
}

.delete-record {
  font-size: 22rpx;
  color: #ef4444;
  padding: 8rpx 16rpx;
  background: rgba(239, 68, 68, 0.1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(239, 68, 68, 0.3);
}

.delete-record:active {
  background: rgba(239, 68, 68, 0.2);
}

/* 完成记录区域 */
.record-section {
  background: rgba(34, 197, 94, 0.1);
  border: 2rpx solid rgba(34, 197, 94, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.photo-record,
.note-record {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.record-image {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.1);
}

.note-content {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 25rpx;
}

.note-text {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.5;
}

.record-desc {
  font-size: 24rpx;
  color: #4ade80;
  font-weight: 500;
}

.record-time {
  font-size: 20rpx;
  color: #a0a0a0;
}

/* 备注区域 */
.notes-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.notes-text {
  font-size: 26rpx;
  color: #a0a0a0;
  line-height: 1.5;
}

/* 时间信息区域 */
.time-info-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.time-info-grid {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10rpx;
}

.time-label {
  font-size: 24rpx;
  color: #a0a0a0;
}

.time-value {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 40rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.button-group rpg-button {
  flex: 1;
}

/* 空状态 */
.empty-state {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #a0a0a0;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #ffffff;
  font-size: 28rpx;
}

/* 添加记录模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.record-modal {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 25rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.05);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.modal-close {
  font-size: 36rpx;
  color: #a0a0a0;
  padding: 10rpx;
  line-height: 1;
}

.modal-close:active {
  color: #ffffff;
}

.record-types {
  padding: 0;
}

.record-type-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.record-type-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
  opacity: 0;
  transition: opacity 0.2s ease;
}

.record-type-item:active::before {
  opacity: 1;
}

.record-type-item:active {
  transform: scale(0.98);
}

.record-type-item:last-child {
  border-bottom: none;
}

.type-icon {
  font-size: 44rpx;
  margin-right: 25rpx;
  min-width: 70rpx;
  text-align: center;
  z-index: 1;
  position: relative;
}

.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  z-index: 1;
  position: relative;
}

.type-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.type-desc {
  font-size: 24rpx;
  color: #a0a0a0;
  line-height: 1.4;
}

.type-arrow {
  font-size: 32rpx;
  color: #6b7280;
  margin-left: 15rpx;
  z-index: 1;
  position: relative;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .task-title-section {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .info-row {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .info-item {
    width: 100%;
  }
  
  .progress-controls {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .progress-slider {
    width: 100%;
  }
  
  .button-group {
    flex-direction: column;
  }
  
  .rewards-grid {
    justify-content: center;
  }
}
