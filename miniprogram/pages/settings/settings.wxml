<!--用户设置页面-->
<view class="settings-container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-avatar">
      <image 
        src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" 
        class="avatar-image"
        mode="aspectFill"
      />
    </view>
    <view class="user-info">
      <text class="user-name">{{userInfo.nickname || '用户'}}</text>
      <text class="user-id">ID: {{userInfo._id ? userInfo._id.slice(-8) : 'Unknown'}}</text>
      <text class="join-date">加入时间: {{userInfo.registrationDate ? userInfo.registrationDate.slice(0, 10) : '未知'}}</text>
    </view>
    <view class="user-actions">
      <rpg-button 
        type="secondary" 
        text="编辑资料" 
        size="small"
        bindtap="editProfile"
      />
    </view>
  </view>

  <!-- 设置分组 -->
  <view class="settings-groups">
    
    <!-- 通用设置 -->
    <view class="settings-group">
      <text class="group-title">通用设置</text>
      
      <view class="setting-item">
        <view class="setting-info">
          <text class="setting-name">消息通知</text>
          <text class="setting-desc">接收任务提醒和系统通知</text>
        </view>
        <switch 
          checked="{{settings.notifications}}" 
          data-key="notifications"
          bindchange="onSwitchChange"
          color="#3b82f6"
        />
      </view>

      <view class="setting-item">
        <view class="setting-info">
          <text class="setting-name">音效</text>
          <text class="setting-desc">播放操作音效和背景音乐</text>
        </view>
        <switch 
          checked="{{settings.soundEffects}}" 
          data-key="soundEffects"
          bindchange="onSwitchChange"
          color="#3b82f6"
        />
      </view>

      <view class="setting-item">
        <view class="setting-info">
          <text class="setting-name">自动备份</text>
          <text class="setting-desc">自动备份数据到云端</text>
        </view>
        <switch 
          checked="{{settings.autoBackup}}" 
          data-key="autoBackup"
          bindchange="onSwitchChange"
          color="#3b82f6"
        />
      </view>

      <view class="setting-item">
        <view class="setting-info">
          <text class="setting-name">隐私模式</text>
          <text class="setting-desc">隐藏个人信息和统计数据</text>
        </view>
        <switch 
          checked="{{settings.privacyMode}}" 
          data-key="privacyMode"
          bindchange="onSwitchChange"
          color="#3b82f6"
        />
      </view>
    </view>

    <!-- 外观设置 -->
    <view class="settings-group">
      <text class="group-title">外观设置</text>
      
      <view class="setting-item" bindtap="selectTheme">
        <view class="setting-info">
          <text class="setting-name">主题</text>
          <text class="setting-desc">{{settings.theme === 'dark' ? '深色主题' : '浅色主题'}}</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item" bindtap="selectLanguage">
        <view class="setting-info">
          <text class="setting-name">语言</text>
          <text class="setting-desc">{{settings.language === 'zh-CN' ? '简体中文' : 'English'}}</text>
        </view>
        <text class="setting-arrow">></text>
      </view>
    </view>

    <!-- 数据管理 -->
    <view class="settings-group">
      <text class="group-title">数据管理</text>
      
      <view class="setting-item" bindtap="viewStatistics">
        <view class="setting-info">
          <text class="setting-name">我的统计</text>
          <text class="setting-desc">查看使用统计和成就</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item" bindtap="exportData">
        <view class="setting-info">
          <text class="setting-name">导出数据</text>
          <text class="setting-desc">备份个人数据</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item" bindtap="clearCache">
        <view class="setting-info">
          <text class="setting-name">清除缓存</text>
          <text class="setting-desc">清理本地缓存数据</text>
        </view>
        <text class="setting-arrow">></text>
      </view>
    </view>

    <!-- 帮助与支持 -->
    <view class="settings-group">
      <text class="group-title">帮助与支持</text>
      
      <view class="setting-item" bindtap="aboutApp">
        <view class="setting-info">
          <text class="setting-name">关于应用</text>
          <text class="setting-desc">版本信息和介绍</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item" bindtap="contactSupport">
        <view class="setting-info">
          <text class="setting-name">联系客服</text>
          <text class="setting-desc">获取帮助和反馈问题</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item" bindtap="onShareAppMessage">
        <view class="setting-info">
          <text class="setting-name">分享应用</text>
          <text class="setting-desc">推荐给朋友</text>
        </view>
        <text class="setting-arrow">></text>
      </view>
    </view>

    <!-- 账户管理 -->
    <view class="settings-group">
      <text class="group-title">账户管理</text>
      
      <view class="setting-item" bindtap="logout">
        <view class="setting-info">
          <text class="setting-name">退出登录</text>
          <text class="setting-desc">退出当前账户</text>
        </view>
        <text class="setting-arrow">></text>
      </view>

      <view class="setting-item danger" bindtap="deleteAccount">
        <view class="setting-info">
          <text class="setting-name">删除账户</text>
          <text class="setting-desc">永久删除账户和所有数据</text>
        </view>
        <text class="setting-arrow">></text>
      </view>
    </view>
  </view>

  <!-- 加载遮罩 -->
  <view wx:if="{{loading}}" class="loading-overlay">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <text class="loading-text">处理中...</text>
    </view>
  </view>
</view>
