/* 物品收藏记录页面样式 */
.collection-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 20rpx;
  color: #ffffff;
  font-family: 'PingFang SC', sans-serif;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 添加物品按钮 */
.add-item-section {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 物品列表 */
.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.item-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.15);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.item-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
  width: 80rpx;
  text-align: center;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.item-category {
  font-size: 24rpx;
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.item-date {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.item-actions {
  display: flex;
  align-items: center;
}

.ai-status {
  padding: 8rpx 12rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.ai-status.has-description {
  background: rgba(251, 191, 36, 0.2);
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.ai-status.no-description {
  background: rgba(156, 163, 175, 0.2);
  border: 1rpx solid rgba(156, 163, 175, 0.3);
}

.status-icon {
  font-size: 24rpx;
}

.item-description {
  margin-bottom: 15rpx;
}

.description-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.item-ai-preview {
  background: rgba(251, 191, 36, 0.1);
  border-radius: 15rpx;
  padding: 15rpx;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.ai-label {
  display: block;
  font-size: 22rpx;
  color: #fbbf24;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.ai-preview {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.empty-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 25rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.detail-modal {
  max-height: 85vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.modal-close {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.7);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  justify-content: flex-end;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input::placeholder, .form-textarea::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 8rpx;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 20rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  font-size: 28rpx;
}

/* 图标选择器 */
.icon-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 10rpx;
}

.icon-option {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  border-radius: 15rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.icon-option.selected {
  background: rgba(59, 130, 246, 0.3);
  border-color: #3b82f6;
  transform: scale(1.1);
}

/* 物品详情样式 */
.item-detail-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.detail-icon {
  font-size: 80rpx;
  margin-right: 25rpx;
}

.detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-category {
  font-size: 26rpx;
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.2);
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
  align-self: flex-start;
}

.detail-date, .detail-price {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.item-description-full {
  margin-bottom: 30rpx;
}

.description-label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.description-content {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
}

/* AI描述区域 */
.ai-description-section {
  background: rgba(251, 191, 36, 0.1);
  border-radius: 20rpx;
  padding: 25rpx;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.ai-title {
  font-size: 28rpx;
  color: #fbbf24;
  font-weight: bold;
}

.ai-content {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 20rpx;
}

.ai-description {
  font-size: 26rpx;
  color: #ffffff;
  line-height: 1.6;
}

.ai-placeholder {
  text-align: center;
  padding: 40rpx 20rpx;
}

.placeholder-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
}
