/* 登录页面样式 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 欢迎界面 */
.welcome-screen {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
}

.app-header {
  margin-bottom: 80rpx;
}

.app-logo {
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
  display: block;
  animation: logoFloat 3s ease-in-out infinite;
}

@keyframes logoFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.app-subtitle {
  display: block;
  font-size: 28rpx;
  color: #a0a0a0;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.app-version {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 功能介绍 */
.features {
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 登录操作 */
.login-actions {
  margin-bottom: 60rpx;
}

/* 用户信息表单 */
.user-info-form {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 25rpx;
}

.avatar-button {
  position: relative;
  background: none;
  border: none;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.avatar-button::after {
  border: none;
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #3b82f6;
  background: rgba(255, 255, 255, 0.1);
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #3b82f6;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 60rpx;
  color: #a0a0a0;
}

.avatar-tip {
  font-size: 22rpx;
  color: #a0a0a0;
}

.nickname-section {
  display: flex;
  justify-content: center;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
}

.nickname-input::placeholder {
  color: #a0a0a0;
}

.login-actions rpg-button {
  width: 100%;
  margin-bottom: 30rpx;
}

.secondary-actions {
  display: flex;
  justify-content: space-around;
  gap: 40rpx;
}

.action-link {
  font-size: 26rpx;
  color: #3b82f6;
  padding: 15rpx 25rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.3);
  border-radius: 20rpx;
  background: rgba(59, 130, 246, 0.1);
}

/* 协议链接 */
.agreements {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
}

.agreement-text {
  font-size: 22rpx;
  color: #888;
}

.agreement-link {
  font-size: 22rpx;
  color: #3b82f6;
  text-decoration: underline;
}

/* 授权中界面 */
.authorizing-screen {
  width: 100%;
  max-width: 500rpx;
  text-align: center;
}

.auth-content {
  padding: 60rpx 40rpx;
}

.auth-animation {
  position: relative;
  margin-bottom: 40rpx;
}

.loading-ring {
  width: 120rpx;
  height: 120rpx;
  border: 6rpx solid rgba(59, 130, 246, 0.2);
  border-top: 6rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.auth-icon {
  font-size: 48rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.auth-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.auth-subtitle {
  display: block;
  font-size: 26rpx;
  color: #a0a0a0;
  margin-bottom: 40rpx;
}

/* 授权步骤 */
.auth-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10rpx;
}

.step-item.active {
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.3);
}

.step-icon {
  font-size: 24rpx;
  margin-right: 15rpx;
  color: #3b82f6;
}

.step-text {
  font-size: 26rpx;
  color: #ffffff;
}

/* 登录成功界面 */
.success-screen {
  width: 100%;
  max-width: 500rpx;
  text-align: center;
}

.success-content {
  padding: 60rpx 40rpx;
}

.success-animation {
  margin-bottom: 40rpx;
}

.success-icon {
  font-size: 100rpx;
  display: block;
  animation: successBounce 0.6s ease-out;
}

@keyframes successBounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.success-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #22c55e;
  margin-bottom: 15rpx;
}

.success-subtitle {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 30rpx;
}

.welcome-message {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.welcome-text {
  font-size: 26rpx;
  color: #a0a0a0;
  line-height: 1.5;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: -1;
}

.bg-particle {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: rgba(59, 130, 246, 0.6);
  border-radius: 50%;
  animation: particleFloat 6s ease-in-out infinite;
}

@keyframes particleFloat {
  0%, 100% { 
    transform: translateY(0px) scale(1);
    opacity: 0.6;
  }
  50% { 
    transform: translateY(-20px) scale(1.2);
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-height: 1200rpx) {
  .login-container {
    padding: 20rpx;
  }
  
  .app-header {
    margin-bottom: 60rpx;
  }
  
  .features {
    margin-bottom: 60rpx;
  }
  
  .feature-item {
    margin-bottom: 20rpx;
    padding: 15rpx;
  }
}
