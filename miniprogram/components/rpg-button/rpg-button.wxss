/* RPG按钮组件样式 */
.rpg-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 25rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

/* 按钮类型 */
.rpg-button--primary {
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
}

.rpg-button--secondary {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.rpg-button--success {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(34, 197, 94, 0.3);
}

.rpg-button--warning {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(251, 191, 36, 0.3);
}

.rpg-button--danger {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.3);
}

.rpg-button--accent {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(139, 92, 246, 0.3);
}

/* 按钮尺寸 */
.rpg-button--small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  min-height: 60rpx;
}

.rpg-button--medium {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  min-height: 80rpx;
}

.rpg-button--large {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  min-height: 100rpx;
}

/* 按钮状态 */
.rpg-button--disabled {
  opacity: 0.5;
  pointer-events: none;
}

.rpg-button--loading {
  pointer-events: none;
}

.rpg-button__loading {
  margin-right: 16rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.rpg-button__text {
  flex: 1;
}

/* 悬停效果 */
.rpg-button:active {
  transform: scale(0.98);
}
