/* 创建任务页面样式 */

.create-task-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 24rpx;
  color: #a0a0a0;
}

/* 任务表单 */
.task-form {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.form-section {
  margin-bottom: 40rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
  box-sizing: border-box;
}

.form-input.error {
  border-color: #ef4444;
}

.form-input::placeholder {
  color: #a0a0a0;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #ffffff;
  min-height: 120rpx;
  box-sizing: border-box;
}

.form-textarea::placeholder {
  color: #a0a0a0;
}

/* 选择器 */
.form-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.form-selector.error {
  border-color: #ef4444;
}

.form-selector:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.98);
}

.selector-text {
  font-size: 28rpx;
  color: #ffffff;
  flex: 1;
}

.selector-text.placeholder {
  color: #a0a0a0;
}

.selector-icon {
  font-size: 32rpx;
  margin-left: 15rpx;
}

/* 时间设置 */
.time-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15rpx;
  padding: 25rpx;
}

.time-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #3b82f6;
  text-align: center;
  margin-bottom: 20rpx;
}

.time-slider {
  width: 100%;
  margin: 20rpx 0;
}

.time-range {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.time-min,
.time-max {
  font-size: 20rpx;
  color: #a0a0a0;
}

/* 提示文本 */
.form-hint {
  display: block;
  font-size: 22rpx;
  color: #a0a0a0;
  margin-top: 10rpx;
  line-height: 1.4;
}

/* 错误文本 */
.error-text {
  display: block;
  font-size: 22rpx;
  color: #ef4444;
  margin-top: 10rpx;
}

/* 奖励预览 */
.reward-preview {
  background: rgba(251, 191, 36, 0.1);
  border: 2rpx solid rgba(251, 191, 36, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.preview-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #fbbf24;
  margin-bottom: 20rpx;
  text-align: center;
}

.reward-items {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 15rpx;
}

.reward-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 120rpx;
}

.reward-icon {
  font-size: 36rpx;
}

.reward-text {
  font-size: 22rpx;
  color: #ffffff;
  text-align: center;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-buttons rpg-button {
  flex: 1;
}

/* 选择器模态框 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.picker-modal {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 25rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 70vh;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.picker-header {
  background: rgba(255, 255, 255, 0.1);
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.picker-content {
  max-height: 500rpx;
  overflow-y: auto;
  padding: 20rpx 0;
}

.picker-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
  border-left: 4rpx solid transparent;
}

.picker-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  min-width: 60rpx;
  text-align: center;
}

.picker-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.picker-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.picker-desc {
  font-size: 22rpx;
  color: #a0a0a0;
  line-height: 1.4;
}

.picker-multiplier {
  font-size: 20rpx;
  color: #3b82f6;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .create-task-container {
    padding: 15rpx;
  }
  
  .task-form {
    padding: 30rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .reward-items {
    justify-content: center;
  }
  
  .picker-modal {
    margin: 20rpx;
    max-height: 80vh;
  }
}

/* 滚动条样式 */
.picker-content::-webkit-scrollbar {
  width: 6rpx;
}

.picker-content::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3rpx;
}

.picker-content::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
}

.picker-content::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}
